/**
 * Definition for a binary tree node.
 * struct TreeNode {
 *     int val;
 *     TreeNode *left;
 *     TreeNode *right;
 *     TreeNode(int x) : val(x), left(NULL), right(NULL) {}
 * };
 */
class Solution {
    public:
        TreeNode* lowestCommonAncestor(TreeNode* root, TreeNode* p, TreeNode* q) {
            //visit the tree, find out how to get to p and q from root, then find out the common route.
            vector<int> proute;
            vector<int> qroute;
            inorder(root, proute, p);
            inorder(root, qroute, q);
            int minl = min(proute.size(), qroute.size());
            for (int i = 0; i < minl; ++i) {
                if (proute[i] != qroute[i]) {
                    return root;
                }else if (proute[i] == 0) {
                    root = root->left;
                }else{
                    root = root->right;
                }
            }
            return root;
        }
        int inorder(TreeNode* root, vector<int>& route, TreeNode* target) 
        {
            //0 means left, and 1 means right
            if (root == nullptr) {
                return 0;
            }
            if (root == target) {
                return 1;
            }
            route.push_back(0);
            if (inorder(root->left, route, target) == 1) {
                return 1;
            }
            route[route.size()-1] = 1;
            if (inorder(root->right, route, target) == 1) {
                return 1;
            };
            route.pop_back();
            return 0;
        }
};
