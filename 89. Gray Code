//Time: O (2 ^ n) Space: O(2 ^ n)
class Solution {
    public:
        vector<int> grayCode(int n) {
            if (n == 0) {
                vector<int> result;
                return result;
            }
            vector<int> result(1 << n, 0);
            result[0] = 0;
            result[1] = 1;
            for (int i = 2; i <= n; ++i) {
                int l = 1 << i;
                for (int j = 1 << (i - 1); j < l; ++ j) {
                    result[j] = result[l - 1 - j] + (1 << (i - 1));
                }
            }
            return result;
        }
};
